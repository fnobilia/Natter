<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="logInEdit" parent="@android:style/Widget.EditText">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textColorHint">#8F8F8F</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="signInDone" parent="@android:style/Widget.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:background">@drawable/bottone_done</item>
    </style>

    <style name="signInLabel" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#3F3F3F</item>
        <item name="android:textSize">18dp</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <style name="signInEdit" parent="@android:style/Widget.EditText">
        <item name="android:layout_width">230dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">#8F8F8F</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="signInRelative">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="signInLine">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">#000000</item>
    </style>

    <style name="profileInfo" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">18dp</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:background">#000000</item>
    </style>

    <style name="profileEdit" parent="@android:style/Widget.EditText">
        <item name="android:layout_width">230dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">#DEDEDE</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">15dp</item>
    </style>

    <style name="settingsLine">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:layout_marginTop">35dp</item>
        <item name="android:layout_marginBottom">35dp</item>
        <item name="android:background">#FFFFFF</item>
    </style>

    <style name="settingsLabel" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="settingsInfo" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">13dp</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

</resources>
