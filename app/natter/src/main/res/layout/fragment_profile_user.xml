<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hp_curves">

    <RelativeLayout
        android:id="@+id/user_sx"
        android:layout_width="110dp"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true">

        <ImageView
            android:id="@+id/user_img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:src="@drawable/profile"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#BB000000"
        android:layout_toRightOf="@id/user_sx">

        <RelativeLayout
            android:id="@+id/info_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="100dp">

            <TextView
                android:id="@+id/nome_user"
                style="@style/profileInfo"
                android:text="Francesco Nobilia"/>

            <TextView
                android:id="@+id/email_user"
                android:layout_below="@id/nome_user"
                style="@style/profileInfo"
                android:text="f.nobilia@gmail.com"
                android:layout_marginTop="30dp"/>

            <TextView
                android:id="@+id/phone_user"
                android:layout_below="@id/email_user"
                style="@style/profileInfo"
                android:text="+39 3476117282"
                android:layout_marginTop="30dp"/>
        </RelativeLayout>

    </RelativeLayout>


</RelativeLayout>
