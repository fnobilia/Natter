<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_margin="10dp"
    android:background="@drawable/list_item_background">

    <ImageView
        android:id="@+id/image_contact"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:contentDescription="@string/desc"
        android:src="@drawable/profile"
        android:layout_centerVertical="true"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/image_contact">
        <TextView
            android:id="@+id/name_surname_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Francesco Nobilia"
            android:textSize="18sp"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/email_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="f.nobilia@gmail.com"
            android:textSize="12sp"
            android:textColor="#000000"
            android:layout_below="@id/name_surname_contact"/>

        <TextView
            android:id="@+id/phone_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3476117282"
            android:textSize="12sp"
            android:textColor="#000000"
            android:layout_below="@id/email_contact"/>

    </RelativeLayout>

    <ImageView
        android:id="@+id/is_natter"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:contentDescription="@string/desc"
        android:src="@drawable/logo_user"
        android:layout_centerVertical="true"
        android:visibility="gone"/>

    <Button
        android:id="@+id/delete_contact"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:contentDescription="@string/desc"
        android:clickable="true"
        android:background="@drawable/bottone_delet"
        android:layout_centerVertical="true"
        android:visibility="gone"/>
</RelativeLayout>