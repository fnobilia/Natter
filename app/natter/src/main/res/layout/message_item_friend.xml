<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/mex_friend_background">

    <ImageView
        android:id="@+id/image_mex_friend"
        android:layout_marginLeft="-2dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/profile"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:id="@+id/text_mex_friend"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hi! How are you?"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_toRightOf="@id/image_mex_friend"/>

    <TextView
        android:id="@+id/time_mex_friend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@id/text_mex_friend"
        android:text="10:25"
        android:textSize="12sp"
        android:textColor="#000000"/>

</RelativeLayout>