<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="140dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/dialog_background">

        <View
            android:id="@+id/button_profile_image_riga"
            android:layout_width="0.5dp"
            android:layout_height="60dp"
            android:background="#333333"
            android:layout_centerInParent="true"/>

            <Button
                android:id="@+id/button_profile_image_camera"
                android:layout_width="75dp"
                android:layout_height="80dp"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@id/button_profile_image_riga"
                android:layout_centerVertical="true"
                android:background="@drawable/bottone_camera"
                android:contentDescription="camera"/>

            <Button
                android:id="@+id/button_profile_image_gallery"
                android:layout_width="75dp"
                android:layout_height="80dp"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/button_profile_image_riga"
                android:layout_centerVertical="true"
                android:background="@drawable/bottone_gallery"
                android:contentDescription="gallery"/>


</RelativeLayout>